{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@next/next/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "process": "readonly",
    "REACT_APP_FIREBASE_API_KEY": "readonly",
    "REACT_APP_FIREBASE_AUTH_DOMAIN": "readonly",
    "REACT_APP_FIREBASE_DATABASE_URL": "readonly",
    "REACT_APP_FIREBASE_PROJECT_ID": "readonly",
    "REACT_APP_FIREBASE_STORAGE_BUCKET": "readonly",
    "REACT_APP_FIREBASE_MESSAGING_SENDER_ID": "readonly",
    "REACT_APP_FIREBASE_APP_ID": "readonly",
    "REACT_APP_APP_VERSION": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "rules": {
    // Add any specific rules you want to configure or override
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
